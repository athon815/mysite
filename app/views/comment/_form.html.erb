<%= form_for([@post, @post.comments.build]) do |f| %>
	
	<%= f.hidden_field :post_id, value: @post.id %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
      <%= f.submit %>
  </p>
<% end %>